include ../title/title

mixin contactUs(subtitle)
  +b.contact-us#contact-us-form
    +e.SPAN.arrow-bottom
    +b.wrapper-contact
      +title({'text':'contact us'})
      +b.contact-form-container
        +e.SPAN.title=subtitle
        +b.FORM.contact-form
          +e.contact-shell
            +e.DIV.input-shell-responsive
              +b.DIV.input-wrapper
                +e.INPUT.input-field(
                  name="name"
                  type="text"
                  placeholder="Name*"
                  data-anim-input
                )
                +e.DIV.input-icon(data-anim-icon)
                  svg(viewbox='0 0 24 24', xmlns='http://www.w3.org/2000/svg')
                    path(d='M3 5v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2H5c-1.11 0-2 .9-2 2zm12 4c0 1.66-1.34 3-3 3s-3-1.34-3-3 1.34-3 3-3 3 1.34 3 3zm-9 8c0-2 4-3.1 6-3.1s6 1.1 6 3.1v1H6v-1z')
                    path(d='M0 0h24v24H0z', fill='none')

              +b.DIV.input-wrapper
                +e.INPUT.input-field(
                  name="email"
                  type="email"
                  placeholder="Email*"
                  data-anim-input
                )
                +e.DIV.input-icon(data-anim-icon)
                  svg(viewbox='0 0 24 24', xmlns='http://www.w3.org/2000/svg')
                    path(d='M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z')
                    path(d='M0 0h24v24H0z', fill='none')
                      
              +b.DIV.input-wrapper
                +e.INPUT.input-field(
                  name="email"
                  type="email"
                  placeholder="Email*"
                  data-anim-input
                )
                +e.DIV.input-icon(data-anim-icon)
                  svg(viewbox='0 0 24 24', xmlns='http://www.w3.org/2000/svg')
                    path(d='M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z')
                    path(d='M0 0h24v24H0z', fill='none')

            +e.DIV.textarea-shell-responsive
              +b.DIV.input-wrapper
                +e.TEXTAREA.textare-field(
                  name="text"
                  placeholder="Message*"
                  data-anim-input
                )
              +b.DIV.input-wrapper
                +e.INPUT.input-submit-btn(
                  type="submit"
                  value="Submit message"
                  data-anim-input
                )
       
            
